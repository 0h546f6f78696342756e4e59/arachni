
        <% if !component['options'].empty? %> <h5>Options</h5> <%end%>
        <% component['options'].each do |opt| %>
            <p class="options">

                <%=opt['desc']%> <% if opt['required'] %> <strong>*</strong> <%end%>

                <input name="options[<%=component['plug_name']%>][<%=opt['name']%>]"

                <% if opt['type'] == 'path' %>
                type="file" value="<%=opt['default']%>"
                <% elsif opt['type'] == 'bool' %>
                type="checkbox" <% if opt['default']%> checked="checked" <%end%>
                <% else %>
                 value="<%=opt['default']%>"
                <%end%>

                />


            </p>
        <%end%>
