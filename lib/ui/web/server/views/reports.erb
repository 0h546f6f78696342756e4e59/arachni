
        <div id="page-intro">
            <h2>Reports</h2>
            <p>This page allows you to review the results of the scans you have performed and export them in various formats.</p>
        </div>
        <%= erb :flash, {:layout => false} %>

        <% if !reports.empty? %>
        <table>
            <tr>
                <th>Host</th>
                <th>Audit date</th>
                <th>Export as</th>
            </tr>
        <% reports.each do |report| %>
            <tr>


                <td><%=report['host']%></td>
                <td><%=report['date']%></td>

                <td>
                    <% available.each do |avail| %>
                    <a href="/report/<%=report['name']%>.<%=avail['rep_name']%>"><%=avail['name']%></a></br>
                    <%end%>
                </td>
            </tr>
        <% end %>
        </table>
        <% else %>
        <span class="notice"> There are no available report.</span>
        <% end %>
